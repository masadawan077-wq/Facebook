<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" stylesheets="@styles.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="com.facebook.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="facebook" textFill="#1877f2">
      <font>
         <Font name="System Bold" size="40.0" />
      </font>
      <style>
         -fx-text-fill: #1877f2;
      </style>
    </Label>
   <TextField fx:id="usernameField" maxWidth="300.0" promptText="Username" />
   <PasswordField fx:id="passwordField" maxWidth="300.0" promptText="Password" />
    <Button maxWidth="300.0" onAction="#onLoginButtonClick" text="Log In" />
   <Label text="or" />
   <Button styleClass="secondary" mnemonicParsing="false" onAction="#onSignupButtonClick" text="Create New Account" />
   <Label fx:id="errorLabel" styleClass="error-label" />
</VBox>
